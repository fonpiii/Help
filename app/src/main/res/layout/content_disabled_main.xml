<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:layout_marginTop="10dp"
            android:paddingStart="15dp"
            android:paddingBottom="0dp"
            android:columnCount="3">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/helplogo">

                    </ImageView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|start">

                    <TextView
                        android:id="@+id/txtFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ดอกไม้ นานา"
                        android:textSize="17dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/lightBlack">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|start">

                    <TextView
                        android:id="@+id/txtUserType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="(ผู้ขอความช่วยเหลือ)"
                        android:textColor="@color/lightBlack">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:paddingBottom="0dp"
            android:columnCount="3">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/ratingReqForHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginVertical="0dp"
                        android:layout_marginHorizontal="8dp"
                        style="@style/MyRatingBar">

                    </RatingBar>

                    <TextView
                        android:id="@+id/txtScoreReqForHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="คะแนนขอความช่วยเหลือ"
                        android:textSize="12dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/black">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="1dp"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0.01">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/lightBlack"
                    android:gravity="center">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <RatingBar
                        android:id="@+id/ratingVolunteerForHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="2"
                        android:stepSize="0.5"
                        android:isIndicator="true"
                        android:layout_marginVertical="0dp"
                        android:layout_marginHorizontal="8dp"
                        style="@style/MyRatingBar">

                    </RatingBar>

                    <TextView
                        android:id="@+id/txtScoreVolunteerForHelp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:text="คะแนนอาสาช่วยเหลือ"
                        android:textColor="@color/black">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:layout_marginTop="15dp"
            android:paddingBottom="0dp"
            android:layout_marginHorizontal="15dp"
            android:columnCount="2">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_marginEnd="8dp"
                android:layout_columnWeight="0">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/orange"
                    android:background="@drawable/custom_button_radius"
                    android:text="ขอความช่วยเหลือ"
                    android:paddingHorizontal="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="13dp">

                </Button>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rowCount="1"
                        android:paddingBottom="0dp"
                        android:columnCount="3">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:backgroundTint="@color/lightGray"
                                    android:background="@color/lightGray"
                                    android:text="POST"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="22dp">

                                </Button>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="60dp"
                            android:layout_width="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:gravity="center"
                            android:layout_columnWeight="0.02">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:orientation="vertical"
                                android:background="@color/lightGray"
                                android:gravity="center">

                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="35dp"
                                    android:background="@color/black">


                                </View>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_gravity="fill"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:backgroundTint="@color/lightGray"
                                    android:background="@color/lightGray"
                                    android:text="SOS"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:textSize="22dp">

                                </Button>

                            </LinearLayout>

                        </LinearLayout>

                    </GridLayout>



                </LinearLayout>

            </LinearLayout>

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="25dp"
            android:columnCount="2">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0.2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/orange"
                            android:text="แสดงทั้งหมด"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textSize="17dp">

                        </TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/black">

                        </View>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_marginStart="35dp"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_height="35dp"
                        android:background="@drawable/style_spinner"
                        android:popupBackground="@color/lightGray"
                        android:layout_width="match_parent">
                    </Spinner>

                </LinearLayout>

            </LinearLayout>

        </GridLayout>

