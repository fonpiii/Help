<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:rowCount="1"
            android:visibility="invisible"
            android:columnCount="3">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgProfile_Feed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/helplogo">

                    </ImageView>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtUsername_Feed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxxx  xxxxxx"
                            android:textSize="13dp"
                            android:textColor="@color/black">

                        </TextView>

                        <RatingBar
                            android:id="@+id/ratingUser_Feed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:layout_marginVertical="0dp"
                            android:layout_marginHorizontal="8dp"
                            style="@style/MyRatingBar">

                        </RatingBar>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/icon_clock"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/wall_clock">

                        </ImageView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 วินาที"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:layout_marginEnd="5dp">
                        </TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="@color/lightGray">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="xxxxxxxx"
                                android:paddingHorizontal="5dp"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:textColor="@color/black">

                            </TextView>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/postDetail_Feed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                            android:textSize="13dp"
                            android:textColor="@color/black">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgPostDetail_Feed"
                            android:layout_width="170dp"
                            android:layout_height="128dp"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:src="@drawable/gmail">
                        </ImageView>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:gravity="bottom"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ความคิดเห็น"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/countComment_Feed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รายการ"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black">

                </TextView>

            </LinearLayout>

        </GridLayout>

        <LinearLayout
            android:id="@+id/llRecorder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/close">

                </ImageButton>


            </LinearLayout>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@android:color/darker_gray"
                android:textSize="50sp" />

            <!--        <LinearLayout-->
            <!--            android:id="@+id/llPlay"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:orientation="horizontal"-->
            <!--            android:paddingEnd="10dp"-->
            <!--            android:paddingStart="10dp"-->
            <!--            android:visibility="visible">-->

            <!--            <ImageView-->
            <!--                android:id="@+id/imgViewPlay"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="?android:attr/selectableItemBackground"-->
            <!--                android:clickable="true"-->
            <!--                android:focusable="true"-->
            <!--                android:src="@drawable/play" />-->

            <!--        </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/microphone" />

                <ImageButton
                    android:id="@+id/imgBtStop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="15dp"
                    android:src="@drawable/stop_button"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


